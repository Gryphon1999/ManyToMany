@model ManyToManyRelation.Models.StudentCourse

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student Name</label>
                <select asp-for="StudentId" asp-items="ViewBag.StudentId" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Course</label>
                <ul>
                    @foreach (var item in ViewBag.Course)
                    {
                        <input type="checkbox" name="CourseId" value="@item.CourseId" /> @item.CourseName<br />
                    }
                </ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
